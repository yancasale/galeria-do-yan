---
const path = Astro.url.pathname.replace(/\/$/, "");
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=LXGW+WenKai+Mono+TC&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Galeria do Yan</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <style>
      header {
        text-align: center;
        padding: 3rem 1rem;
      }

      .nav-row {
        display: inline-flex;
        align-items: center;
        gap: 1.25rem;
      }

      nav {
        display: inline-flex;
        gap: 1.25rem;
      }

      nav a {
        color: #aaa;
        transition: color 0.3s;
      }

      .site-title {
        text-align: center;
        justify-content: center;
        align-items: center;
        margin-bottom: 2rem;
      }

      .site-title img {
        max-width: 420px;
        width: 100%;
        height: auto;
        margin: 0 auto;
        display: block;
      }

      nav a.active {
        color: #000;
      }

      .nav-controls {
        display: inline-flex;
        align-items: center;
      }

      header {
        text-align: center;
        padding: 3rem 1rem;
      }

      nav a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -4px;
        width: 100%;
        height: 1px;
        background: #000;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.25s ease;
      }

      nav a:hover {
        color: #000;
        text-decoration: none;
      }

      .nav-row {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.25rem;
      }

      nav {
        display: flex;
        gap: 1.25rem;
      }

      nav a {
        margin: 0 1rem;
        color: #aaa;
        transition: color 0.3s;
        text-decoration: none;
      }

      nav a.active {
        color: #000;
      }

      main {
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 1.5rem 4rem;
      }
    </style>
  </head>

  <body>
    <header>
      <div class="site-title">
        <img src="/images/ui/title.png" alt="Galeria do Yan" />
      </div>

      <div class="nav-row">
        <nav>
          <a href="/" class={path === "" ? "active" : ""}> Galeria </a>
          <a href="/about" class={path === "/about" ? "active" : ""}> Sobre </a>
        </nav>

        <div class="nav-controls">
          <slot name="controls" />
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
