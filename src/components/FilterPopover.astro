<div class="filter-wrapper">
  <button id="filter-toggle" aria-label="Filter works">â˜°</button>

  <div id="filter-panel" class="panel">
    <button data-filter="all" class="active">Todos</button>
    <button data-filter="photo">Fotos</button>
    <button data-filter="drawing">Desenhos</button>
  </div>
</div>

<style>
  .filter-wrapper {
    position: relative;
    display: inline-block;
  }

  #filter-toggle {
    background: none;
    border: none;
    font-size: 1.2rem;
    cursor: pointer;
    color: #999;
  }

  #filter-toggle:hover {
    color: #000;
  }

  #filter-toggle {
    transition: color 0.3s;
  }

  .panel {
    position: absolute;
    top: 2rem;
    right: 0;
    background: #fff;
    border: 1px solid #eee;
    padding: 0.5rem;
    display: none;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    z-index: 10;
  }

  .panel button {
    display: block;
    background: none;
    border: none;
    padding: 0.4rem 0.8rem;
    text-align: left;
    width: 100%;
    cursor: pointer;
    color: #777;
  }

  .panel button.active {
    color: #000;
  }

  .panel button:hover {
    background: #f2f2f2;
  }
</style>

<script>
  const toggle = document.getElementById("filter-toggle");
  const panel = document.getElementById("filter-panel");

  toggle.addEventListener("click", (e) => {
    e.stopPropagation();
    panel.style.display = panel.style.display === "block" ? "none" : "block";
  });

  document.addEventListener("click", () => {
    panel.style.display = "none";
  });
</script>
